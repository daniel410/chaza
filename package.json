{
  "name": "chaza",
  "version": "1.0.0",
  "private": true,
  "description": "Price comparison service for household items",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=@chaza/database",
    "db:push": "turbo run db:push --filter=@chaza/database",
    "db:studio": "pnpm --filter @chaza/database db:studio",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
