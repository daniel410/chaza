// Prisma schema for Chaza - Price Comparison Service
// Supports US & Canada retailers, user accounts, price tracking, and alerts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Region {
  US
  CA
}

enum AlertType {
  PRICE_DROP      // When price drops below target
  PRICE_CHANGE    // Any price change
  BACK_IN_STOCK   // When item becomes available
  DEAL            // Special deals/promotions
}

enum AlertChannel {
  EMAIL
  PUSH
  SMS
}

enum RetailerType {
  PHYSICAL        // Brick and mortar stores
  ONLINE          // Online only
  BOTH            // Both physical and online
}

enum ProductCategory {
  BABY_DIAPERS
  BABY_FORMULA
  BABY_FOOD
  BABY_WIPES
  BABY_CARE
  BEVERAGES_SODA
  BEVERAGES_WATER
  BEVERAGES_JUICE
  BEVERAGES_SPORTS
  HOUSEHOLD_CLEANING
  HOUSEHOLD_PAPER
  HOUSEHOLD_LAUNDRY
  PERSONAL_CARE
  PET_FOOD
  PET_SUPPLIES
  SNACKS
  OTHER
}

enum PriceSourceType {
  API             // Official retailer API
  SCRAPER         // Web scraping
  MANUAL          // Manual entry
  THIRD_PARTY     // Third-party data provider
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerified   DateTime?
  passwordHash    String?
  name            String?
  image           String?
  region          Region    @default(US)
  zipCode         String?   // For local pricing
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastLoginAt     DateTime?
  
  // Preferences
  preferredRetailers  String[]    // Array of retailer IDs
  emailNotifications  Boolean     @default(true)
  pushNotifications   Boolean     @default(true)
  
  // Relations
  accounts        Account[]
  sessions        Session[]
  favorites       Favorite[]
  priceAlerts     PriceAlert[]
  shoppingLists   ShoppingList[]
  searchHistory   SearchHistory[]

  @@index([email])
  @@index([region])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// RETAILERS
// ============================================

model Retailer {
  id              String        @id @default(cuid())
  name            String        // e.g., "Walmart", "Amazon"
  slug            String        @unique // e.g., "walmart-us", "amazon-ca"
  displayName     String        // e.g., "Walmart US", "Amazon.ca"
  region          Region
  type            RetailerType
  logoUrl         String?
  websiteUrl      String
  affiliateId     String?       // For affiliate links
  affiliateParam  String?       // e.g., "tag=", "ref="
  isActive        Boolean       @default(true)
  
  // API/Scraping configuration
  apiType         PriceSourceType @default(SCRAPER)
  apiBaseUrl      String?
  apiKey          String?       // Encrypted
  rateLimit       Int           @default(100) // Requests per minute
  
  // Metadata
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Relations
  prices          Price[]
  scrapingJobs    ScrapingJob[]

  @@index([region])
  @@index([slug])
}

// ============================================
// PRODUCTS
// ============================================

model Brand {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  logoUrl     String?
  websiteUrl  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  products    Product[]

  @@index([slug])
}

model Product {
  id              String          @id @default(cuid())
  
  // Identification
  upc             String?         // Universal Product Code
  ean             String?         // European Article Number
  asin            String?         // Amazon Standard Identification Number
  sku             String?         // Stock Keeping Unit (internal)
  
  // Basic info
  name            String
  slug            String          @unique
  description     String?         @db.Text
  brandId         String?
  brand           Brand?          @relation(fields: [brandId], references: [id])
  category        ProductCategory
  subcategory     String?
  
  // Product details
  imageUrl        String?
  images          String[]        // Array of image URLs
  
  // Size/quantity info for unit price calculation
  size            Float?          // e.g., 128 (for 128 count)
  sizeUnit        String?         // e.g., "count", "oz", "ml", "kg"
  packSize        Int             @default(1) // e.g., 2 for a 2-pack
  
  // Metadata
  isActive        Boolean         @default(true)
  regions         Region[]        // Available in which regions
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  prices          Price[]
  priceHistory    PriceHistory[]
  favorites       Favorite[]
  priceAlerts     PriceAlert[]
  shoppingListItems ShoppingListItem[]

  @@index([upc])
  @@index([asin])
  @@index([category])
  @@index([slug])
  @@index([name])
}

// ============================================
// PRICING
// ============================================

model Price {
  id              String          @id @default(cuid())
  productId       String
  product         Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  retailerId      String
  retailer        Retailer        @relation(fields: [retailerId], references: [id], onDelete: Cascade)
  
  // Current price info
  currentPrice    Decimal         @db.Decimal(10, 2)
  originalPrice   Decimal?        @db.Decimal(10, 2) // Before discount
  currency        String          @default("USD")
  
  // Unit pricing
  unitPrice       Decimal?        @db.Decimal(10, 4) // Price per unit
  unitMeasure     String?         // e.g., "per diaper", "per oz"
  
  // Availability
  inStock         Boolean         @default(true)
  stockQuantity   Int?
  
  // Retailer-specific info
  productUrl      String          @db.Text
  retailerSku     String?         // Retailer's SKU
  
  // Promotion/sale info
  isOnSale        Boolean         @default(false)
  saleEndDate     DateTime?
  promoCode       String?
  
  // Data source
  sourceType      PriceSourceType @default(SCRAPER)
  lastCheckedAt   DateTime        @default(now())
  lastChangedAt   DateTime        @default(now())
  
  // Metadata
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  priceHistory    PriceHistory[]

  @@unique([productId, retailerId])
  @@index([productId])
  @@index([retailerId])
  @@index([currentPrice])
  @@index([lastCheckedAt])
}

model PriceHistory {
  id          String    @id @default(cuid())
  priceId     String
  price       Price     @relation(fields: [priceId], references: [id], onDelete: Cascade)
  productId   String
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  recordedPrice   Decimal   @db.Decimal(10, 2)
  wasOnSale       Boolean   @default(false)
  recordedAt      DateTime  @default(now())

  @@index([priceId])
  @@index([productId])
  @@index([recordedAt])
}

// ============================================
// USER FEATURES
// ============================================

model Favorite {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId   String
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  
  // Optional: preferred retailer for this item
  preferredRetailerId String?

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model PriceAlert {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId       String
  product         Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  alertType       AlertType
  targetPrice     Decimal?      @db.Decimal(10, 2) // For PRICE_DROP alerts
  channels        AlertChannel[]
  
  isActive        Boolean       @default(true)
  lastTriggeredAt DateTime?
  triggerCount    Int           @default(0)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([userId, productId, alertType])
  @@index([userId])
  @@index([productId])
  @@index([isActive])
}

model ShoppingList {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  isDefault   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  items       ShoppingListItem[]

  @@index([userId])
}

model ShoppingListItem {
  id              String        @id @default(cuid())
  shoppingListId  String
  shoppingList    ShoppingList  @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  productId       String
  product         Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  quantity        Int           @default(1)
  isPurchased     Boolean       @default(false)
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([shoppingListId, productId])
  @@index([shoppingListId])
}

model SearchHistory {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  query       String
  category    ProductCategory?
  resultsCount Int      @default(0)
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([query])
}

// ============================================
// DATA COLLECTION
// ============================================

model ScrapingJob {
  id              String          @id @default(cuid())
  retailerId      String
  retailer        Retailer        @relation(fields: [retailerId], references: [id])
  
  status          String          @default("pending") // pending, running, completed, failed
  startedAt       DateTime?
  completedAt     DateTime?
  
  totalProducts   Int             @default(0)
  processedCount  Int             @default(0)
  successCount    Int             @default(0)
  errorCount      Int             @default(0)
  
  errorLog        String?         @db.Text
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([retailerId])
  @@index([status])
  @@index([createdAt])
}

// ============================================
// ANALYTICS (Optional - for ad optimization)
// ============================================

model PageView {
  id          String    @id @default(cuid())
  sessionId   String
  userId      String?
  page        String
  productId   String?
  referrer    String?
  userAgent   String?
  createdAt   DateTime  @default(now())

  @@index([sessionId])
  @@index([productId])
  @@index([createdAt])
}

model ClickEvent {
  id          String    @id @default(cuid())
  sessionId   String
  userId      String?
  productId   String?
  retailerId  String?
  eventType   String    // "affiliate_click", "add_favorite", etc.
  metadata    Json?
  createdAt   DateTime  @default(now())

  @@index([sessionId])
  @@index([eventType])
  @@index([createdAt])
}
